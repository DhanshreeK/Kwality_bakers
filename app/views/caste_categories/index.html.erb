<%= render 'layouts/messages'%>
<div class="row">
        <div class="col-lg-12">
        <br><br>
          <div class="panel panel-primary">
            <div class="panel-heading clearfix">
              <h3 class="panel-title">Caste Categories</h3>
              <ul class="panel-tool-options"> 
                <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
              </ul>
            </div>
            <div class="panel-body">
           <%=link_to 'New Caste Category', new_caste_category_path, class: 'btn btn-link' %>
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover dataTables-example" >
<p id="notice"><%= notice %></p>



  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caste_categories.each do |caste_category| %>
      <tr>
        <td><%= caste_category.name %></td>
        <td><%= link_to 'Show', caste_category,class: "btn btn-blue btn-sm" %></td>
        <td><%= link_to 'Edit', edit_caste_category_path(caste_category),class: "btn btn-success btn-sm"  %></td>
    
     <!--    <td><%= link_to 'Delete',url_for(action: :destroy,id: caste_category.id,controller: 'students'),method: :delete, data: {confirm: "Are you sure?"}  ,class: "btn btn-red btn-sm" %></td> -->

      </tr>
    <% end %>
  </tbody>
</table>

