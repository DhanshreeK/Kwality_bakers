                        <br>
                        <!-- panel body --> 
                        <div class="panel-body"> 
<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <form class="form-horizontal">

     <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-6 control-label">Name</label>
          <%= form.text_field :name, id: :employee_name, placeholder: 'Employee Name' , class: 'form-control'%>
        </div>
    </div>

     <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-6 control-label">Designation</label>
         <%= form.text_field :designation, id: :employee_designation, placeholder: 'Employee Designation',  class: 'form-control' %>
      </div>
    </div>

     <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-8 control-label">Employee Adhar No</label>
        <%= form.text_field :adhar_card_no, id: :employee_adhar_card_no, placeholder: 'Employee Adhar No', class: 'form-control'%>
      </div>
    </div>

     <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-6 control-label">Contact No</label>
          <%= form.text_field :contact_no, id: :employee_contact_no,placeholder: 'Contact', class: 'form-control' %>
       </div>
     </div>

   <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-6 control-label">Alternate Contact</label>
           <%= form.text_field :alternate_contact_no, id: :employee_alternate_contact_no, placeholder: 'Alternate Contact' , class: 'form-control'%>
       </div>
    </div>

   <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-6 control-label">Email</label>
        <%= form.text_field :email, id: :employee_email, placeholder: 'Email',  class: 'form-control'%>
      </div>
   </div>

  <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-6 control-label">Joining Date</label>
         <%= form.date_field :joining_date, id: :employee_joining_date, placeholder: 'Joining Date',  class: 'form-control'%>
       </div>
    </div>

   <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-6 control-label">Birth Place</label>
       <%= form.text_field :birth_place, id: :employee_birth_place, placeholder: 'Birth Date',class: 'form-control' %>
      </div>
  </div>

     <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-6 control-label">Address</label>
        <%= form.text_field :address, id: :employee_address, placeholder: 'Address',class: 'form-control' %>
    <br>
  </div>
  </div>

    <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-6 control-label">Employee  No</label>
    <%= form.text_field :employee_no, id: :employee_employee_no,readonly: true,:value=> @employee.employee_no, class: "form-control" %>
  </div>
</div>

<%if current_user.role == 'SuperAdmin'%>
     <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-6 control-label">Center Select</label>
    <%= form.select :center_id, Center.all.collect{|c| [c.center_name,c.id]}, {prompt:true},id: 'employee_center_id',class: "form-control selectpicker", "data-live-search" => "true" 
 %>
    </div>
  </div>
<%end%>

  <div class="form-group">
        <div class="col-md-4">
          <label class="col-sm-6 control-label">Status</label>
  <%= form.radio_button "employee_status", "Active", checked: "checked" %> <b>Active</b>
              <%= form.radio_button "employee_status", "Inactive"%> <b>Inactive</b>
                 </div>
</div> 
<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
            <div class="form-group"> 
                                <div class="col-sm-offset-1 col-sm-10">  
    <%= form.submit "Submit", class: 'btn btn-success' %>
    <%= link_to 'Back', employees_path, class: 'btn btn-red' %>
     
  </div>
  </div>

<% end %>
</div>
</div>
</div>
</div>
