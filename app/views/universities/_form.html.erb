<%=country_select("center", "country", { placeholder: 'Select a country' }, { class: 'country-select-box', class: 'form-control' })%>
  </div>
  
    <%= form.fields_for :unversity_attachments do |p| %>
     <div class="col-md-4">
        <label for="text_input" class="label_height">Add Attachment</label>
           <span style="color:red">*</span>
       <%= p.file_field :attachment, as: :file,:multiple => true,name: "university_attachments[attachment][]" ,class: 'form-control'%>
     </div>
       <div class="col-md-4">
        <label for="text_input" class="label_height">Add Attachment Name</label>
