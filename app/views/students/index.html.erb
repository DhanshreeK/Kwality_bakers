<%= render 'layouts/messages'%>
<div class="row">
        <div class="col-lg-12">
        <br><br>
          <div class="panel panel-primary">
            <div class="panel-heading clearfix">
              <h3 class="panel-title">Student Details</h3>
              <ul class="panel-tool-options"> 
                <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
              </ul>
            </div>
            <div class="panel-body">
            <%if current_user.role != 'Student'%>
            <%= link_to 'New Student', new_student_path, class: 'btn btn-link' %>
            <%end%>

              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover dataTables-example" >
<p id="notice"><%= notice %></p>

  <thead>
    <tr>
      <th>Enrollment</th>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Contact no</th>
      <th>Course</th>
      <th>Course Type</th>
      <th>Center</th>
      <th>University</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <tr>
      <%if current_user.role == 'Student'%>
        <td><%= @student.enrollment %></td>
        <td><%= @student.first_name %></td>
        <td><%= @student.middle_name %></td>
        <td><%= @student.last_name %></td>
        <td><%= @student.contact_no %></td>
        <td><%= @student.course.course_name %></td>
        <td><%= @student.course_type.course_type_name %></td>
        <td><%= @student.center.center_name %></td>
        <td><%= @student.university.university_name %></td>
       <td><%= link_to 'Show', @student,class: "btn btn-blue btn-sm" %></td>
        <td><%= link_to 'Status',student_status_student_path(@student),class: "btn btn-red btn-sm" %></td>

      <%end%>
   </tr>
  </tr>
  
  </tbody>
</table>
<br>
</div>
</div>
</div>
</div>